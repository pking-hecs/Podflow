FROM node:18-alpine

# Install curl for healthchecks
RUN apk add --no-cache curl

WORKDIR /app

COPY package*.json ./

RUN npm install --only=production

COPY src ./src

EXPOSE 3000

HEALTHCHECK --interval=10s --timeout=3s --retries=3 \
  CMD curl -f http://localhost:3000/health || exit 1

CMD ["node", "src/server.js"]